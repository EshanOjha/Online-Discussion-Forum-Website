<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
<session-config>
<session-timeout>
30
</session-timeout>
</session-config>
<welcome-file-list>
<welcome-file>index.jsp</welcome-file>
</welcome-file-list>
<servlet>
<servlet-name>Question</servlet-name>
<servlet-class>thinking.machines.AddQuestion</servlet-class>
</servlet>
<servlet>
<servlet-name>teacherAnswer</servlet-name>
<servlet-class>thinking.machines.teacherAnswer</servlet-class>
</servlet>
<servlet>
<servlet-name>studentComment</servlet-name>
<servlet-class>thinking.machines.studentComment</servlet-class>
</servlet>
<servlet>
<servlet-name>isValidTeacher</servlet-name>
<servlet-class>thinking.machines.isValidTeacher</servlet-class>
</servlet>
<servlet>
<servlet-name>isValidStudent</servlet-name>
<servlet-class>thinking.machines.isValidStudent</servlet-class>
</servlet>

<servlet-mapping>
<servlet-name>Question</servlet-name>
<url-pattern>/Question</url-pattern>
</servlet-mapping>

<servlet-mapping>
<servlet-name>teacherAnswer</servlet-name>
<url-pattern>/teacherAnswer</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>isValidStudent</servlet-name>
<url-pattern>/isValidStudent</url-pattern>
</servlet-mapping>
<servlet-mapping>
<servlet-name>studentComment</servlet-name>
<url-pattern>/studentComment</url-pattern>
</servlet-mapping>

<servlet-mapping>
<servlet-name>isValidTeacher</servlet-name>
<url-pattern>/isValidTeacher</url-pattern>
</servlet-mapping>


</web-app>
